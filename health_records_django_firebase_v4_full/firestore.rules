rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isDoctor(uid) {
      return exists(/databases/$(db)/documents/users/$(uid)) &&
             get(/databases/$(db)/documents/users/$(uid)).data.role == "doctor";
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /uid2email/{uid} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false;
    }

    match /records/{recordId} {
      allow read: if request.auth != null && (
        isDoctor(request.auth.uid) || resource.data.patientId == request.auth.uid
      );
      allow create, update, delete: if request.auth != null && isDoctor(request.auth.uid);
    }

    match /appointments/{apptId} {
      allow read: if request.auth != null && (
        isDoctor(request.auth.uid) || resource.data.patientId == request.auth.uid
      );
      allow create, update, delete: if request.auth != null && isDoctor(request.auth.uid);
    }
  }
}
